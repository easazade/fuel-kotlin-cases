<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/reqResRoot_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddd"
        android:orientation="vertical"
        tools:context=".ReqResDotIn">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="see result in logcat"
            android:textColor="#000" />

        <Button
            android:id="@+id/reqResBtn_listUsers"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="listUsers"
            android:text="list users"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="listUsersAsObject"
            android:text="list users as object"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="singleUser"
            android:text="single user"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="singleUser404"
            android:text="single user 404"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="createUser"
            android:text="create user"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="createUser_serializeUsingGson"
            android:text="create user - gson serilization"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="createUserExplicitBodyDefining"
            android:text="create user explicit body defining"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="getSingleUserBlockingMode"
            android:text="single user blocking mode"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="patchRequest"
            android:text="patch request"
            android:textColor="#f00"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="15dp"
            android:background="#fff"
            android:onClick="deleteRequest"
            android:text="delete request"
            android:textColor="#f00"
            android:textSize="16sp" />


    </LinearLayout>
</ScrollView>